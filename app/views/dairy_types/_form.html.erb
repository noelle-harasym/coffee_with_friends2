<% was_validated = dairy_type.errors.any? %>

<%= form_with(model: dairy_type, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% dairy_type_class = "form-control" %>
    <% dairy_type_was_invalid = dairy_type.errors.include?(:dairy_type) %>

    <% if was_validated %>
      <% if dairy_type_was_invalid %>
        <% dairy_type_class << " is-invalid" %>
      <% else %>
        <% dairy_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dairy_type %>
    <%= f.text_field :dairy_type, class: dairy_type_class, placeholder: "Enter dairy type" %>
    <% if dairy_type_was_invalid %>
      <% dairy_type.errors.full_messages_for(:dairy_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
