<%= form_with(model: @coffee_order, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :coffe_type_id %>

    <%= f.collection_select :coffe_type_id, CoffeeType.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :dairy_type_id, value: @dairy_type.id %>

  <div class="form-check">
    <%= f.check_box :iced, class: "form-check-input" %>
    <%= f.label :iced, class: "form-check-label" %>
  </div>

  <div class="form-group">
    <%= f.label :modifications_other %>
    <%= f.text_area :modifications_other, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>

    <%= f.text_field :rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :picture %>

    <%= f.file_field :picture, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :date %>

    <%= f.date_select :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :user_id %>

    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create coffee order", class: "btn btn-block btn-outline-secondary" %>
<% end %>
