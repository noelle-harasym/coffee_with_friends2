<div class="card mb-3">
  <h2 class="card-header h4">
    Dairy Type #<%= dairy_type.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Dairy type</dt>
      <dd><%= dairy_type.dairy_type %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back dairy_type, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_dairy_type_url(dairy_type), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to dairy_type, method: :delete, data: { confirm: "Do you really want to delete this dairy_type?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(dairy_type.updated_at) %> ago
  </div>
</div>
