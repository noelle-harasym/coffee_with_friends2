    <% iced_was_invalid = coffee_order.errors.include?(:iced) %>

    <% if was_validated %>
      <% if iced_was_invalid %>
        <% iced_class << " is-invalid" %>
      <% else %>
        <% iced_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :iced, class: "form-check-label" do %>
      <%= f.check_box :iced, class: iced_class %> Iced
    <% end %>
