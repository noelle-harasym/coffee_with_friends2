<% was_validated = coffee_order.errors.any? %>

<%= form_with(model: coffee_order, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% coffe_type_class = "form-control" %>
    <% coffe_type_was_invalid = coffee_order.errors.include?(:coffe_type) %>

    <% if was_validated %>
      <% if coffe_type_was_invalid %>
        <% coffe_type_class << " is-invalid" %>
      <% else %>
        <% coffe_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :coffe_type_id %>
    <%= f.collection_select :coffe_type_id, CoffeeType.all, :id, :to_s, {}, class: "form-control" %>
    <% if coffe_type_was_invalid %>
      <% coffee_order.errors.full_messages_for(:coffe_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% dairy_type_class = "form-control" %>
    <% dairy_type_was_invalid = coffee_order.errors.include?(:dairy_type) %>

