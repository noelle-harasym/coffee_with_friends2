<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Coffee Orders

    <a data-toggle="collapse" href="#coffee_type_coffee_orders_new_form">
      Add coffee order
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @coffee_type.coffee_orders.each do |coffee_order| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to coffee_order, coffee_order %>

        <%= link_to coffee_order, method: :delete, data: { confirm: "Do you really want to delete this coffee_order" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="coffee_type_coffee_orders_new_form">
        <%= render partial: "coffee_types/coffee_type_coffee_orders_new_form" %>
      </div>
    </div>

  </ul>
</div>
