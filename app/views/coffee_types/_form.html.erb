<% was_validated = coffee_type.errors.any? %>

<%= form_with(model: coffee_type, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% coffee_type_class = "form-control" %>
    <% coffee_type_was_invalid = coffee_type.errors.include?(:coffee_type) %>

    <% if was_validated %>
      <% if coffee_type_was_invalid %>
        <% coffee_type_class << " is-invalid" %>
      <% else %>
        <% coffee_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :coffee_type %>
    <%= f.text_field :coffee_type, class: coffee_type_class, placeholder: "Enter coffee type" %>
    <% if coffee_type_was_invalid %>
      <% coffee_type.errors.full_messages_for(:coffee_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
